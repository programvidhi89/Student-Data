<%- include('header') %>

<h1>Edit Student Details</h1>
<form action="/students/update/<%= student._id %>" method="POST">
    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" value="<%= student.firstName %>" required>

    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" value="<%= student.lastName %>" required>

    <label for="studentId">Student ID:</label>
    <input type="text" id="studentId" name="studentId" value="<%= student.studentId %>" required>

    <label for="course">Course:</label>
    <input type="text" id="course" name="course" value="<%= student.course %>" required>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= student.email %>" required>

    <label for="phone">Phone Number:</label>
    <input type="text" id="phone" name="phone" value="<%= student.phone %>" required>

    <button type="submit">Update Student</button>
</form>
<%- include('footer') %>